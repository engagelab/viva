{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "checkJs": false,
    "baseUrl": "/",
    "lib": ["ES2020", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "clients/**/src/**/*.ts",
    "clients/**/src/**/*.d.ts",
    "clients/**/src/**/*.tsx",
    "clients/**/src/**/*.vue",
    "clients/**/src/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.tsx", "client/src/types/cordova-plugin-file/index.d.old"
  ],
  "exclude": [
    "clients/**/tailwind.config.js",
    "clients/**/src-cordova/**/*",
    "clients/**/www/**/*",
    "clients/**/dist/**/*",
    "clients/**/node_modules",
    "node_modules",
    "server"
  ]
}
