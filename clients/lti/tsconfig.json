{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "checkJs": false,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ES2020", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src-cordova/node_modules/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.tsx", "client/src/types/cordova-plugin-file/index.d.old"
  ],
  "exclude": [
    "tailwind.config.js",
    "src-cordova/**/*",
    "www/**/*",
    "dist/**/*",
    "node_modules",
    "server"
  ]
}
